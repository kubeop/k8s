global
  maxconn                 4000
  log                     127.0.0.1 local0
  chroot                  /var/lib/haproxy
  pidfile                 /var/run/haproxy.pid
  user                    haproxy
  group                   haproxy
  daemon
  stats                   socket /var/lib/haproxy/stats

defaults
  mode                    http
  log                     global
  option                  httplog
  option                  dontlognull
  option                  http-server-close
  option                  redispatch
  retries                 5
  timeout http-request    5m      # 默认http请求超时时间
  timeout queue           5m      # 默认队列超时时间
  timeout connect         30s     # 默认连接超时时间
  timeout client          5m      # 默认客户端超时时间
  timeout server          15m     # 默认服务器超时时间
  timeout http-keep-alive 30s     # 默认持久连接超时时间
  timeout check           30s     # 设置心跳检查超时时间
  maxconn                 4000

frontend http_stats
  {% if kubernetes.ipv4_stack -%}
  bind *:58080
  {% endif -%}
  {% if kubernetes.ipv6_stack -%}
  bind :::58080
  {% endif -%}
  mode http
  option httplog
  stats uri /haproxy?stats

frontend control-plane
  {% if kubernetes.ipv4_stack -%}
  bind *:{{loadbalance.port}}
  {% endif -%}
  {% if kubernetes.ipv6_stack -%}
  bind :::{{loadbalance.port}}
  {% endif -%}
  mode tcp
  option tcplog
  default_backend kube-apiservers

backend kube-apiservers
  mode tcp
  balance leastconn
  default-server inter 15s downinter 15s rise 2 fall 2 slowstart 60s maxconn 1000 maxqueue 256 weight 100
  {% for host in groups['master'] %}
  server  {{hostvars[host].hostname}} {{host}}:6443 check
  {% endfor %}
